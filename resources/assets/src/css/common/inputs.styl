@keyframes checkboxHighlight
    from
        width 0
        height 0
        margin-top 0
        margin-left 0
        opacity 1
    to
        width 80px
        height 80px
        margin-top -40px
        margin-left -40px
        opacity 0

.input
input[type="text"]
input[type="email"]
input[type="number"]
input[type="password"]
input[type="tel"]
input[type="date"]
input[type="time"]
input[type="url"]
input[type="search"]
textarea
    appearance none
    box-sizing border-box
    width 100%
    padding 16px 16px
    color: Colors.defaultText
    line-height 1.2
    border solid 2px #dddddd
    border-radius 2px
    background-color transparent
    transition border-color .1s ease

    &:hover
        border-color #c0c0d0

    &:focus
        border-color: Colors.primary

input[type=number]::-webkit-inner-spin-button
input[type=number]::-webkit-outer-spin-button
    -webkit-appearance none
    margin 0

label

    input[type="checkbox"]
    input[type="radio"]
        display none

    input[type="checkbox"] + i
    input[type="radio"] + i
        display inline-block
        vertical-align middle
        position relative
        line-height 1

        &:before
            content ''
            display inline-block
            vertical-align middle
            position relative
            z-index 2
            width 18px
            height 18px
            border solid 2px #dddddd
            border-radius 2px
            background-color #ffffff
            background-repeat no-repeat
            background-position center center
            background-size 16px 16px
            cursor pointer

        &:after
            content ''
            position absolute
            z-index 1
            width 0
            height 0
            top 50%
            left 50%
            border-radius 50%
            background-color #cccccc
            opacity 1

    input[type="checkbox"]:checked + i
    input[type="radio"]:checked + i

        &:before
            border solid 2px #aaaaaa
            background-image: url(unquote('data:image/png;base64,'))

        &:after
            animation checkboxHighlight .25s ease

label:hover

    input[type="checkbox"] + i
    input[type="radio"] + i

        &:before
            border-color #c0c0d0

    input[type="checkbox"]:checked + i
    input[type="radio"]:checked + i

        &:before
            border-color #aaaaaa

select
    @extends .input
    background-image url('data:image/png;base64,')
    background-position right center
    background-repeat no-repeat
    background-size 29px 48px
    cursor pointer

    &:hover
        @extends .input:hover
        background-image url('data:image/png;base64,')

    &:focus
        @extends .input:focus
        background-image url('data:image/png;base64,')