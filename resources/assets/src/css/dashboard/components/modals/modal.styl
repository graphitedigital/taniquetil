@keyframes modalIn
    from
        opacity 0
    to
        opacity 1

@keyframes modalBkgIn
    from
        margin-top 20%
    to
        margin-top 0

.modal
    box-sizing border-box
    display flex
    align-items center
    justify-content center
    position fixed
    top 0
    left 0
    z-index 1000
    width 100%
    height 100%
    padding 48px
    background-color rgba(#000000, .7)
    animation-name modalIn
    animation-duration .3s
    animation-iteration-count 1
    animation-timing-function ease

    @media screen and (max-width 1000px)
        padding 24px

    .modal__body
        box-sizing border-box
        position relative
        z-index 999
        max-width 100%
        max-height 100%
        border-top-left-radius 4px
        border-top-right-radius 4px
        border-bottom-right-radius 3px
        border-bottom-left-radius 3px
        background-color #ffffff
        box-shadow 0 8px 10px 1px rgba(0,0,0,0.14), 0 3px 14px 2px rgba(0,0,0,0.12), 0 5px 5px -3px rgba(0,0,0,0.3)
        overflow hidden
        animation-name modalBkgIn
        animation-duration .6s
        animation-iteration-count 1
        animation-timing-function ease

        .modal__body__header
            position relative
            min-height 22px
            padding 12px 18px 12px 18px
            color #ffffff
            font-family: Fonts.heading
            font-size 26px
            font-weight regular
            background-color: Colors.primary

            .modal__body__header__close
                position absolute
                top 0
                right 0
                padding 12px
                width 22px
                height 22px
                font-size 22px
                text-align center
                cursor pointer

                &:before
                    @extends .icon
                    @extends .icon--cross:before
                    position absolute
                    top 12px
                    right 12px
                    width 22px
                    height 22px
                    text-align center
                    line-height 1

        .modal__body__content
            position relative

        .modal__body__footer
            padding 12px 18px 12px 18px
            border-top solid 1px #dddddd
            background-color #f2f2f2

.modal--pad

    .modal__body

        .modal__body__content
            padding 36px

        .modal__body__footer
            padding 24px 36px

.modal--heavyPad

    .modal__body

        .modal__body__content
            padding 48px

        .modal__body__footer
            padding 24px 48px