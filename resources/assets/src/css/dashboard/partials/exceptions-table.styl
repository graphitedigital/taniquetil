.exceptionsTable
    position relative
    min-height 605px
    width 100%
    border-bottom: solid 3px Colors.primary
    border-top-left-radius 4px
    border-top-right-radius 4px
    border-bottom-right-radius 3px
    border-bottom-left-radius 3px
    background-color #555555
    user-select none

    .exceptionsTable__table
        display flex
        flex-direction column
        width 100%
        min-height 605px
        overflow-x scroll

        table
            min-width 100%
            table-layout fixed
            border-collapse collapse

            thead

                tr
                    color #ffffff
                    background-color #ffffff

                    th
                        position relative
                        text-align left
                        padding 16px 32px 16px 18px
                        font-family: Fonts.heading
                        font-weight bold
                        background-color: Colors.primary
                        cursor pointer
                        user-select none
                        transition background-color .2s ease

                        &:hover
                            background-color: darken(Colors.primary, 10)

                        &:first-child
                            padding 0
                            border-top-left-radius 4px

                            label
                                display block
                                padding 16px 18px
                                cursor pointer

                        &:last-child
                            border-top-right-radius 4px

                    th.alignCenter
                        @extends .alignCenter

                    th.orderedBy

                        &:after
                            position absolute
                            top 50%
                            right 12px
                            content ''
                            width 0
                            height 0
                            margin-top -4px
                            border-style solid

                    th.orderedBy.orderedBy--asc

                        &:after
                            border-width: 6px 6px 0 6px;
                            border-color: #ffffff transparent transparent transparent;

                    th.orderedBy.orderedBy--desc

                        &:after
                            border-width 0 6px 6px 6px
                            border-color transparent transparent #ffffff transparent;

                    th.keyId
                        width 58px

                    th.keyGroupAmount
                        width 60px

            tbody

                tr
                    background-color #ffffff

                    td
                        padding 16px 18px
                        cursor pointer

                        &:first-child
                            padding-left 23px

                            label
                                display block
                                padding 16px 18px
                                cursor pointer

                        &:last-child
                            padding-right 23px

                        span
                            white-space nowrap

                    td.noPad
                        padding 0

                tr:nth-child(odd)
                    background-color #ffffff

                tr:nth-child(even)
                    background-color #f5f5f5

                tr.selected
                    background-color: Colors.paleOrgane

                tr.selected:nth-child(odd)
                    background-color: Colors.paleOrgane

                tr.selected:nth-child(even)
                    background-color: darken(Colors.paleOrgane, 5)

        .exceptionsTable__table__none
            display flex
            flex 1
            align-items center
            justify-content center
            color rgba(#ffffff, 0.15)
            font-size 32px

.exceptionsTable__loadMore
    padding 16px 12px
    text-align center
    font-weight bold
    background-color: Colors.paleBlue
    cursor pointer

    &:hover
        text-decoration underline

.exceptionsTable--loading

    .exceptionsTable__loading
        @extends .loadingDark
        position absolute
        top 0
        left 0
        width 100%
        height 100%